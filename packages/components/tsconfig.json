{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "ESNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES6", "DOM", "ES2016", "ES2017"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "typeRoots": [
      "src/types",
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "rollup.config.js"
  ]
}
